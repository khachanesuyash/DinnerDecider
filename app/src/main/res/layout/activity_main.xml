<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chinese"
            android:id="@+id/foodname" android:fontFamily="sans-serif"
            android:textSize="36sp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="#000000"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/ic_launcher"
            android:id="@+id/imageView3" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="DECIDE!"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:id="@+id/decidebtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Base.Widget.AppCompat.Button.Borderless" android:background="#2941CC"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.0" android:textColor="#000000"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addfood" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/foodname"
            android:hint="Add new food..."
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/addbtn" android:textColor="#000000"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"/>
    <Button
            android:text="Add Food"
            android:layout_width="217dp"
            android:layout_height="36dp"
            android:id="@+id/addbtn"
            style="@style/Widget.AppCompat.Button.Borderless" android:background="#2941CC"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textColorLink="#00000000"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/decidebtn" android:textColor="#000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>